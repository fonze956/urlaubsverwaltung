<?xml version="1.0" encoding="UTF-8"?>
<Configuration hierarchy="custom" description="custom"
               xmlns="https://focus_shift.de/jollyday/schema/holiday"
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
               xsi:schemaLocation="https://focus_shift.de/jollyday/schema/holiday https://focus_shift.de/jollyday/schema/holiday/holiday.xsd">
  <Holidays>
    <Fixed month="JANUARY" day="1" descriptionPropertiesKey="NEW_YEAR"/> <!-- Neujahr -->
    <Fixed month="JANUARY" day="6" descriptionPropertiesKey="EPIPHANY"/> <!-- Hl. 3 Koenige -->
    <Fixed month="MAY" day="1" descriptionPropertiesKey="LABOUR_DAY"/> <!-- Tag der Arbeit -->
    <Fixed month="OCTOBER" day="3" validFrom="1990"
           descriptionPropertiesKey="UNIFICATION"/> <!-- Tag der dt. Einheit -->
    <Fixed month="NOVEMBER" day="1" descriptionPropertiesKey="ALL_SAINTS"/> <!-- Allerheiligen -->
    <Fixed month="DECEMBER" day="25" descriptionPropertiesKey="CHRISTMAS"/> <!-- 1. Weihnachtstag -->
    <Fixed month="DECEMBER" day="26" descriptionPropertiesKey="STEPHENS"/> <!-- 2. Weihnachtstag -->
    <Fixed month="DECEMBER" day="24" descriptionPropertiesKey="CHRISTMAS_EVE"/>  <!--Heiligabend-->
    <Fixed month="DECEMBER" day="31" descriptionPropertiesKey="NEW_YEARS_EVE"/>  <!--Silvester-->
    <ChristianHoliday type="CORPUS_CHRISTI" descriptionPropertiesKey="christian.CORPUS_CHRISTI"/>
    <ChristianHoliday type="EASTER" descriptionPropertiesKey="christian.EASTER"/>
    <ChristianHoliday type="GOOD_FRIDAY" descriptionPropertiesKey="christian.GOOD_FRIDAY"/> <!-- Karfreitag -->
    <ChristianHoliday type="EASTER_MONDAY" descriptionPropertiesKey="christian.EASTER_MONDAY"/> <!-- Ostermontag -->
    <ChristianHoliday type="ASCENSION_DAY"
                      descriptionPropertiesKey="christian.ASCENSION_DAY"/> <!-- Christi Himmelfahrt -->
    <ChristianHoliday type="WHIT_MONDAY" descriptionPropertiesKey="christian.WHIT_MONDAY"/> <!-- Pfingstmontag -->
  </Holidays>

</Configuration>
